menu "LTE BLE gateway sample"

config MQTT_BROKER_HOSTNAME
	string "MQTT broker hostname"
	default "custom.url"
config MQTT_DEVICE_ID
	string "MQTT device ID"
	default "nrf9160dk_board_1"
config MQTT_USERNAME
	string "MQTT username"
	default "mqtt_user"
config MQTT_PASSWORD
	string "MQTT password"
	default "mqtt_password"
config MQTT_PORT
	int "MQTT port"
	default 8883
config MQTT_TOPIC
	string "MQTT topic"
	default "#"
config MQTT_CONNECT_TIMEOUT
	int "MQTT connect timeout"
	default 10000
config MQTT_KEEPALIVE
	int "MQTT keepalive"
	default 30

config UDP_SERVER_ADDRESS_STATIC
	string "UDP server IP address"
	default "custom udp address"

config UDP_SERVER_PORT
	string "UDP server IP address"
	default "5005"

config GNSS_SEARCH_INTERVAL
	int "Interval for starting GNSS search"
	default 240

config GNSS_SEARCH_TIMEOUT
	int "Timeout for GNSS search"
	default 120
	help
	  The GNSS will stop acquiring GNSS fix when it times out.
	  It will restart the search at the start of the next search interval.

endmenu

module=LTE_BLE_GW
module-dep=LOG
module-str= LTE BLE gateway sample
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu
